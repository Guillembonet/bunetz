package echo

templ Echo(value string) {
	<div class="container px-6 md:mx-auto mt-4">
		<div class="max-w-2xl px-8 py-4 rounded-lg shadow-md mx-auto">
			<div class="my-2">
				<p class="text-xl font-bold text-gray-700 dark:text-white hover:text-gray-600 dark:hover:text-gray-200 hover:underline">{ value }</p>
			</div>
		</div>
	</div>
}
